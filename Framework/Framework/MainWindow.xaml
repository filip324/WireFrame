<Window x:Class="Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Framework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="CanvasMain" Height="450" Width="800"
            PreviewMouseMove="CanvasMain_PreviewMouseMove"
            PreviewMouseUp="CanvasMain_PreviewMouseUp"
            MouseRightButtonDown="OnMouseRightButtonDown"
            MouseLeftButtonDown="OnMouseLeftButtonDown">
        <Button x:Name="ObjectButton" Content="Object" Canvas.Left="25" Canvas.Top="23" Width="75" Click="Button_Click"/>
        <Button x:Name="Bound_Button" Content="Bound" Canvas.Left="25" Canvas.Top="70" Width="75" Click="Button_Click_1"/>

    </Canvas>
</Window>
